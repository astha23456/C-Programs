#include<stdio.h>
#include<conio.h>
#include<string.h>
void main()
{
 char s[20];
 int i,n,c=0;
 clrscr();
 printf("Enter the string : ");
 gets(s);
 printf("The string is : %s \n",s);
 n=strlen(s);

 for(i=0;i<n/2;i++)
 {
  if(s[i]==s[n-i-1])
  c++;
 }
 if(c==i)
 {
  printf("It is palindrome \n");
 }
 else
 {
 printf("It is not palindrome \n");
 }
 getch();
}
